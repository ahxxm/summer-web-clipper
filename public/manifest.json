{
  "manifest_version": 2,
  "name": "Summer Web Clipper",
  "description": "Universal web clipper with ai generated summary.",
  "version": "0.0.1",
  "icons": {
    "64": "icons/icon.png"
  },
  "permissions": [
    "tabs",
    "*://www.notion.so/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "dist/content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "browser_action": {
    "default_icon": {
      "64": "icons/icon.png"
    },
    "default_popup": "popup.html",
    "default_title": "Summer Web Clipper"
  },
  "options_ui": {
    "page": "options.html"
  },
  "background": {
    "scripts": [
      "dist/background.js"
    ]
  }
}
